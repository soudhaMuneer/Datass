@{
}
@model List<StudentPortal.Models.Student>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            @Html.Partial("_sidebar")
        </div>
        <div class="col-md-8">
            <h1>Students</h1>
            <a class="btn btn-primary" asp-controller="Student" asp-action="Add">Add new Student</a>
            <table class="table">
                <thead>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th></th>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.Id</td>
                            <td>@student.Name</td>
                            <td>@student.Email</td>
                            <td>@student.Phone</td>
                            <td>
                                <a class="btn btn-primary"
                                   asp-controller="Student"
                                   asp-action="Edit"
                                   asp-route-Id="@student.Id">Edit</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

    