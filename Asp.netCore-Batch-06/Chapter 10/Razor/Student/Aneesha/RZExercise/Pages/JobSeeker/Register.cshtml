@page
@model RZExercise.Pages.JobSeeker.RegisterModel
@{
}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .container {
        background-color: #fff;
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        width: 1000px;
        margin-top: 50px; /* Added margin-top for separation */
    }

    form {
        margin-bottom: 20px;
    }

    h2 {
        margin-top: 0;
        margin-bottom: 10px;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="password"] {
        width: calc(100% - 22px);
        padding: 8px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    button {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        button:hover {
            background-color: #45a049;
        }

        button[type="submit"] {
            width: 100%;
        }
</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Registration</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <form action="registration.php" method="POST" id="registerForm">
            <h2>Register</h2>

            <label for="Username">UserName</label>
            <input type="text" asp-for="Input.UserName" required>

            <label for="fullName">Full Name</label>
            <input type="text" asp-for="Input.FullName" required>

            <label for="email">Email</label>
            <input type="email" asp-for="Input.Email" required>

            <label for="password">Password</label>
            <input type="password" asp-for="Input.Password" required>

            <label for="gender">Gender</label>
            <select asp-for="Input.Gender" required>
                <option value="">Select Gender</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="other">Other</option>
            </select>

            <label for="location">Location</label>
            <input type="text" asp-for="Input.Location">

            <label for="phone">Phone Number</label>
            <input type="tel" asp-for="Input.Phone">

            <label for="qualification">Qualification</label>
            <input type="text" asp-for="Input.Qualification">

            <button type="submit">Register</button>
        </form>
    </div>
</body>
</html>