@page
@model RZExercise.Pages.JobSeeker.JobListModel
@{
}

<style>
    /* Table styles */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th, .table td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }

    /* Button styles */
    .btn {
        padding: 8px 12px;
        margin-right: 5px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
        border: none;
    }

    .btn-warning {
        background-color: #ffc107;
        color: white;
        border: none;
    }
</style>

<h1>Jobs</h1>

<table class="table">
    <thead>
        <tr>
            <th>Job Title</th>
            <th>Description</th>
            <th>Location</th>
            <th>Posted Date</th>
            <th>Actions</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model.Jobs)
        {
            <tr>
                <td>@job.JobTitle</td>
                <td>@job.Description</td>
                <td>@job.Location</td>
                <td>@job.PostedDate?.ToString("yyyy-MM-dd")</td>
                <td>
                    <button type="button" class="btn btn-primary" onclick="applyJob('@job.JobId')">Apply</button>
                    <button type="button" class="btn btn-danger" onclick="deleteJob('@job.JobId')">Delete</button>
                    <button type="button" class="btn btn-warning" onclick="editJob('@job.JobId')">Edit</button>
                </td>
            </tr>
        }
    </tbody>
</table>