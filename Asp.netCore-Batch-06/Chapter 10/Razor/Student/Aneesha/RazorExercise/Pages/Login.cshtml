@page
@model RazorExercise.Pages.LoginModel
@{
}
<style>
    .form-group {
        margin-bottom: 1rem;
    }

    .form-control {
        border-radius: 0.25rem;
        border: 1px solid #ccc;
        padding: 0.5rem;
        font-size: 1rem;
        width: 100%;
        box-sizing: border-box;
    }

        .form-control:focus {
            outline: none;
            box-shadow: 0 0 2px 1px #007bff;
        }

    label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: bold;
    }

    button.btn.btn-primary {
        border-radius: 0.25rem;
        background-color: #007bff;
        color: #fff;
        padding: 0.5rem 1rem;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        button.btn.btn-primary:hover {
            background-color: #0069d9;
        }
</style>

<form method="post">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" asp-for="loginUser.Email" class="form-control" id="email" placeholder="Enter your email">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" asp-for="loginUser.Password" class="form-control" id="password" placeholder="Enter your password">
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>

