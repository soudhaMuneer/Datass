@page
@model Exercise2.Pages.Public.LoginPageModel
@{
    Layout = "_Layout";
}
<div class="container-fluid ">

    <div class="row p-5">
        <div class="col-lg-12 shadow-lg p-3 mb-5  rounded bg-white">
            <div class="row ">

                <div class="col-lg-6">
                    <div class="text-center"><h2>Login</h2></div>
                    <form method="post" class="mt-4">
                        <label class="form-label">User Name</label>
                        <input asp-for="userDtos.Email" class="form-control" name="email" type="email" value="" required="" />
                        <label class="form-label">Password</label>
                        <input asp-for="userDtos.Password" class="form-control" name="password" type="password" value="" required="" />
                        <button class="btn btn-primary mt-5 w-100">Login</button>
                    </form>
                    <div class="text-center mt-4">
                        <a asp-page="/Index" class="">Or Register With</a>
                        <div class="mt-3">
                            <img src="~/images/google_300221.png" width="30px" height="30px" alt="Alternate Text" />
                            <img src="~/images/instagram_2111463.png" class="ml-3" width="30px" height="30px" alt="Alternate Text" />
                            <img src="~/images/facebook_5968764.png" class="ml-3" width="30px" height="30px" alt="Alternate Text" />
                        </div>
                    </div>

                </div>
                <div class="col-lg-6">
                    <img src="~/images/4707071.jpg" class="w-100" height="400px" alt="Alternate Text" />
                </div>
            </div>

        </div>
    </div>
</div>