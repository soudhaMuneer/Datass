<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/jobproviderassets/landingstyle.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        .sidebar {
            background-color: rgb(17, 126, 189);
        }

        .nav-item {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 sidebar">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline">HireMeNow</span>
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">

                        <li class="nav-item">
                            <a href="~/JobProvider/jobslist" class="d-flex align-items-center text-white text-decoration-none" id="dropdownUser1">
                                <img src="~/jobseekerassets/images/buildings-2.png" alt="hugenerd" width="30" height="30">
                                <span class="d-none d-sm-inline mx-1">DashBoard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/JobProvider/jobslist" class="d-flex align-items-center text-white text-decoration-none" id="dropdownUser1">
                                <img src="~/jobseekerassets/images/clipboard-text.png" alt="hugenerd" width="30" height="30">
                                <span class="d-none d-sm-inline mx-1">Job</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/JobProvider/jobslist" class="d-flex align-items-center text-white text-decoration-none" id="dropdownUser1">
                                <img src="~/jobseekerassets/images/message-2.png" alt="hugenerd" width="30" height="30">
                                <span class="d-none d-sm-inline mx-1"> Applications</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="d-flex align-items-center text-white text-decoration-none" id="dropdownUser1">
                                <img src="~/jobseekerassets/images/profile.png" alt="hugenerd" width="30" height="30">
                                <span class="d-none d-sm-inline mx-1">Messages</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="d-flex align-items-center text-white text-decoration-none" id="dropdownUser1">
                                <img src="~/jobseekerassets/images/setting-2.png" alt="hugenerd" width="30" height="30">
                                <span class="d-none d-sm-inline mx-1">Settings</span>
                            </a>
                        </li>



                    </ul>
                    <hr>
                    <div class="dropdown pb-4">
                        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/jobseekerassets/images/profile.png" alt="hugenerd" width="30" height="30" class="rounded-circle">
                            <span class="d-none d-sm-inline mx-1">Settings</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow">

                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="~/public/login?Action=logout">Sign out</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col py-3">
                <div class="nav">
                    <div class="col-md-11">
                       
                    </div>
                    <div>

                        <img src="~/jobseekerassets/images/notification-bing.png" width="30px" alt="notifications" align="middle"> &nbsp;
                        <img src="~/jobseekerassets/images/profile.png" alt="profile" title="profile" width="35px" align="middle">
                        @*<font size="4" face="DM Sans" color="#11133E" align="center">
                        &nbsp; Leslie Alexander
                        </font>*@

                    </div>

                </div>
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
