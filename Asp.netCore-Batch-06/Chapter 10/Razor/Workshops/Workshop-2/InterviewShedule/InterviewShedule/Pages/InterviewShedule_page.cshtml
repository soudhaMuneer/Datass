@model InterviewShedule.Pages.InterviewShedule_pageModel
@{
	 Layout = "_InterviewLayout";
}
<body>
	<div class="container-fluid">
		<div  class="row">
			<div class="col-md-2 text-nowrap bg-primary">
				<nav class="navbar  navbar-expand-md sidebar navbar-dark">
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
	  					<span class="navbar-toggler-icon bg-dark"></span>
	  				</button>
	 				<div class="collapse  navbar-collapse sidebar " id="collapsibleNavbar">
	 					<ul class="list-group text-white list-unstyled">
	 						<li class="list-group-item border-0 bg-primary pt-5 pb-5 ">
	 							<h4 class="h4-fluid">HireMe Now</h4>
	 						</li>
	 						
	 						<li class="list-group-item border-0 bg-primary">
	 							<p><img src="~/asset/images/dashboard 1 (2).png" >  Dash Board</p>
	 						</li>
	 						<li class="list-group-item border-0 bg-primary">
	 							<p><img src="~/asset/images/suitcase 2 (1).png" >  Jobs</p>
	 						</li>
			    			<li class="list-group-item border-0 bg-primary">
	 							<p><img src="~/asset/images/application (1) 1 (2).png">  Applications</p>
	 						</li>
			   				<li class="list-group-item border-0 bg-primary">
	 							<p><a class="nav-link text-white" asp-area="" asp-page="/SheduledInterview"><img src="~/images/question (1) 1.png"> Interviews</a></p>
	 						</li>
	 						<li class="list-group-item border-0 bg-primary">
	 							<p><img src="~/asset/images/message 1 (2).png" > Messages</p>
	 						</li>
			    
			    			<li class="list-group-item border-0 bg-primary">
	 							<p><img src="~/asset/images/settings 1 (1).png">  Settings</p>
	 						</li>
			    			<li class="list-group-item border-0 bg-primary">
			    				<img class="img-fluid" src="~/asset/images/add-group (1) 1 (2).png"><br>
				        		<span class="text-white">Add New</span>
			    			</li>
	 					</ul>
	 				</div>
 				</nav>
 			</div>
 			<div class="col-md-10">
 				<div class="row">
 					<div class="col-md-11 mt-5  border-bottom pb-4 ">
 						<!-- <img class="img-fluid float-right m-2 pt-4" src="~/asset/images/arrow-down.png"> -->
 						<!-- <span class="float-right pt-3 m-2"><strong>Olivia</strong></span> -->
 						<select class="form-select border-0 float-right  mt-4" aria-label="Default select example">
							<option selected><strong>Olivia</strong></option>
											
							</select>
 						<img class="img-fluid float-right" src="~/asset/images/cheerful-curly-business-girl-wearing-glasses 2.png">
 						<img class="img-fluid float-right pt-2 m-2 " src="~/asset/images/Group 5689.png" width="30" height="30">
 					</div>
 				</div>
 				<div class="row">
 					<div class="col-md-11 shadow-sm">
 						<div class="row">
 							<div class="col-md-11">
 								<h3 class="h3-default text-right mr-5 ">Short List</h3>
 							</div>
 						</div>
                        <div class="row">
 							<div class="col-md-10 mx-auto d-block border-top ">
 								<form method="post" >
									<div class="form-group text-dark">
										<label for="Job Title" ><h4>Job Title</h4></label>
										<input asp-for="Input.Post"type="text" name="Post" placeholder="Select Jobtitle" class="form-control bg-light p-4 border-0 rounded " required="">
                                    </div>
									<div class="form-group text-dark p-1">
										<label for="Date"><h4>Date</h4></label>
										<img class="img-fluid float-right" src="~/asset/images/calendar (4) 1.png">
										<input asp-for="Input.Date"type="text" name="date" placeholder="Select Date" class="form-control bg-light p-4 border-0 rounded w-75 "required="">
									</div>
									<div class="form-group text-dark p-1">
										<label for="Time"><h4>Time</h4></label>
										<img class="img-fluid float-right" src="~/asset/images/clock 1.png">
										<input asp-for="Input.Time" type="text" name="time" placeholder=" Enter time" class="form-control bg-light p-4 border-0 rounded w-75"required="">
									</div>
									<div class="form-group text-dark p-2">
										<label for="Location"><h4>Location</h4></label>
										<img class="img-fluid float-right" src="~/asset/images/location 1.png">
										<input asp-for="Input.Location" type="text" name="location" placeholder="Enter location" class="form-control bg-light p-4 border-0 rounded mb-5 w-75"required="">
									</div>
									<div class="form-group d-inline ">
										 <input class="btn  text-white mr-5 bg-primary text-white" type="submit" value="Send"></input>
										<label ><h5>Push Notification</h5></label>
		 								<img class="img-fluid mr-5" src="~/asset/images/Group 14.png">
		 								<label><h5>Email Notifications</h5></label>
										<img class="img-fluid" src="~/asset/images/Group 14.png">
									</div>
								</form>
 							</div>
 						</div>
 					</div>
 				</div>
 			</div>
 		</div>
 	</div>
</body>