@page
@model JobPost.Pages.PostJobModel
@{
	Layout = "_HomeLayout";
}

 
	<div class="container-fluid">
		<div  class="row">
			<div class="col-md-2 text-nowrap bg-primary">
				<nav class="navbar  navbar-expand-md sidebar navbar-dark">
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
						  <span class="navbar-toggler-icon bg-dark"></span>
					  </button>
					 <div class="collapse  navbar-collapse sidebar " id="collapsibleNavbar">
						 <ul class="list-group text-white list-unstyled">
							 <li class="list-group-item border-0 bg-primary pt-5 pb-5 ">
								 <h4 class="h4-fluid">HireMe Now</h4>
							 </li>

							 <li class="list-group-item border-0 bg-primary">
								 <p><img src="~/job/images/dashboard 1 (2).png" >  Dash Board</p>
							 </li>
							 <li class="list-group-item border-0 bg-primary">
								 <p><img src="~/job/images/suitcase 2 (1).png" >  Jobs</p>
							 </li>
							<li class="list-group-item border-0 bg-primary">
								 <p><img src="~/job/images/application (1) 1 (2).png">  Applications</p>
							 </li>
							   <li class="list-group-item border-0 bg-primary">
								 <p><img src="~/job/images/question (1) 1 (2).png"> Interviews</p>
							 </li>
							 <li class="list-group-item border-0 bg-primary">
								 <p><img src="~/job/images/message 1 (2).png" > Messages</p>
							 </li>

							<li class="list-group-item border-0 bg-primary">
								 <p><img src="~/job/images/settings 1 (1).png">  Settings</p>
							 </li>
							<li class="list-group-item border-0 bg-primary">
								<img class="img-fluid" src="~/job/images/add-group (1) 1 (2).png"><br>
								<span class="text-white">Add New</span>
							</li>
						 </ul>
					 </div>
				 </nav>
			 </div>
			 <div class="col-md-10">
				 <div class="row">
					 <div class="col-md-12 mt-5 mb-3 border-bottom">
						 <img class="img-fluid float-right m-2 pt-4" src="~/job/images/arrow-down.png">
						 <span class="float-right pt-3 m-2"><strong>Olivia</strong></span>
						 <img class="img-fluid float-right" src="~/job/images/cheerful-curly-business-girl-wearing-glasses 2.png">
						 <img class="img-fluid float-right pt-2 m-2 " src="~/job/images/Group 5689.png" width="30" height="30">
					 </div>
				 </div>


				 <div class="row">

					 <div class="col-md-10 p-5 mx-auto d-block border rounded mb-5" style="border-radius: 30px; box-shadow: 0px 0px 5px 2px gray;">
						<form method="post">
						 <div class="row">
							 <div class="col-md-10">
								 <div class="form-group">
									 <label for="jobTitle"><h4>Job Title</h4></label>
									 <br>
									 <input asp-for="Input.Title"class="form-control p-4 bg-light" type="text" placeholder="Enter Job Title"required="">
								 </div>
								 <div class="form-group">
									 <label for="description"><h4>Description</h4></label>
									 <br>
									 <input  asp-for="Input.Description"class="form-control p-4 bg-light" type="text" placeholder="Enter Description"required="">
								 </div>
								 <div class="form-group">
									 <label for="Salary"><h4>Salary</h4></label>
									 <br>
									 <input  asp-for="Input.Salary"class="form-control p-4 bg-light" type="text" placeholder="Enter Salary"required="">
								 </div>
								 <div class="form-group">
									 <label for="Location"><h4>Location</h4></label>
									 <br>
									 <input asp-for="Input.Location"class="form-control p-4 bg-light" type="text"  placeholder="Enter Location"required="">
								 </div>
							 </div>
						 </div>
						 <div class="row pt-4">
							 <div class="col-md-3">
								 <input class="btn bg-primary pl-5 pr-5" type="submit" value="Post Job"></input>
								
							 </div>
							 <div class="col-md-3">
								 <label >Push Notification</label>
								 <img class="img-fluid" src="~/job/images/Group 14.png">
							 </div>
							 <div class="col-md-3">
								 <label>Email Notification</label>
								<img class="img-fluid" src="~/job/images/Group 14.png">
							</div>
						 </div>	
						 </form>
					 </div>
				 </div
				
				 <div class="row">
					 <div class="col-md-12 bg-primary ">
						 <img class="img-fluid float-left" src="~/job/images/Decoration (3).png"> 
						 <div class="col-6 position-absolute ">

							<h2 class="h3-fluid text-white mt-5 font-italic ">Get Your Dream Job......</h2>
							<img class="img-fluid float-right p-5" src="~/job/images/calendar (2) 2.png">
							 <img class="img-fluid  float-right p-5 imgHome " src="~/job/images/home-button 4.png">
						</div>
					 </div>
				</div>
			</div>
		</div>
	</div>
