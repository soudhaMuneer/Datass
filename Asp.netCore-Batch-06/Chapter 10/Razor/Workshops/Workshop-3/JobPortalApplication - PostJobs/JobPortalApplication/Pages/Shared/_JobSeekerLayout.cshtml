	<style>
		body, html {
			height: 100%;
			margin: 0;
			padding: 0;
		}

		.fullscreen-div {
			min-height: 100vh;
			background-color: #f1f1f1;
		}

	

		.sidebarDiv{
			background-color: rgba(32, 166, 252, 1);
		}
		#menu li {
			background-color: rgba(32, 166, 252, 1);
		}
		.navbar{
			padding-left: 0px;
		}

		.footerfull{
			padding: 0px;
		}


		.footer1 {
			background: #20a6fc;
			display: flex;
			flex-wrap: wrap;
			justify-content: center;
			flex-direction: column;
		}

		.footer2 {
			display: flex;
			flex-direction: row;
			flex-wrap: wrap;
			align-content: space-between;
			justify-content: space-between;
			margin: 20px;
		}

		.hiremeFooter {
			max-width: 300px;
		}

		.footerContainerDiv{

		}

			.footerContainerDiv.positioned {
				position: relative;
				bottom: -500px;
		}

	</style>
	<script>
		window.addEventListener('resize', function () {
			var screenWidth = window.innerWidth;
			var sampleDiv = document.querySelector('.footerContainerDiv');

			if (screenWidth < 800) {
				sampleDiv.classList.add('positioned');
			} else {
				sampleDiv.classList.remove('positioned');
			}
		});
	</script>
</head>
