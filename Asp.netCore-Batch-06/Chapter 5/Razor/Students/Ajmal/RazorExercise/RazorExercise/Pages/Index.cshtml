@page
@model IndexModel
@{
   Layout = "Logout";
}

<div class="container-fluid">
   
    <div class="row p-5">
        <div class="col-lg-12 ">
            <div class="row shadow-lg p-3 mb-5 bg-white rounded">
                
                <div class="col-lg-6">
                    <div class="text-center"><h2>Registeration</h2></div>
                    <form method="post" class="mt-4">  
                        <label class="form-label">User Name</label>
                        <input class="form-control" asp-for="user.Name" type="text" name="name" value="" required="" />
                        <label class="form-label">Email</label>
                        <input class="form-control" asp-for="user.Email" type="email" name="Email" value="" required="" />
                        <label class="form-label">Password</label>
                        <input class="form-control" asp-for="user.Password" type="text" name="password" value="" required="" />
                        <button class="btn btn-primary mt-5 w-100">Register</button>
                    </form>
                    <div class="text-center mt-4">
                        <a asp-page="/Seeker_Login" class="">Or Login With</a>

                        <div class="mt-3">
                            <img src="~/images/google_300221.png" width="30px" height="30px" alt="Alternate Text" />
                            <img src="~/images/instagram_2111463.png" class="ml-3" width="30px" height="30px" alt="Alternate Text" />
                            <img src="~/images/facebook_5968764.png" class="ml-3" width="30px" height="30px" alt="Alternate Text" />
                        </div>
                        
                    </div>
                   
                </div>
                <div class="col-lg-6">
                    <img src="~/images/6310507.jpg" class="w-100" height="400px" alt="Alternate Text" /> 
                </div>
            </div>
            
        </div>
    </div>
</div>
