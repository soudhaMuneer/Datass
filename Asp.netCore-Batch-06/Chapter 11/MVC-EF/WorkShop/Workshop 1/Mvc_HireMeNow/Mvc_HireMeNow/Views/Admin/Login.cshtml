        .forgot {
            margin-left: 60%;
            color: #9A9AB0;
            cursor: pointer;
        }

            .forgot:hover {
                color: #5541D7;
            }


        .wid1 {
            /* This section calls the slideInFromLeft animation we defined above */
            animation: 2s ease-out 0s 1 slideInFromLeft;
        }

        .row-grid {
            margin-top: 23%;
        }

        .button {
            text-decoration: none;
            text-transform: uppercase;
