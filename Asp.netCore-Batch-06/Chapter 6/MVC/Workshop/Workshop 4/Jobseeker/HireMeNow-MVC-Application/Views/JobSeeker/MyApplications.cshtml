@model IEnumerable<HireMeNow_MVC_Application.Models.Application>

@{
    ViewData["Title"] = "MyApplications";
    Layout = "~/Views/Shared/_JobSeekerLayout.cshtml";
}

<style>

	.proImg {
		background-color: #ffffffcf;
		height: 125px;
		width: 125px;
		border-radius: 50%;
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		position: relative;
		top: 61px;
	}

	.right {
		box-shadow: -4px -2px 4px 1px #0000001c;
	}

	.header {
		height: 151px;
		/* width: 763px; */
		background-image: linear-gradient(to bottom right, #20a6fc, #94f1e6ab);
		/* background-position: center; */
		display: flex;
		justify-content: flex-end;
		align-items: center;
		flex-direction: column;
		background-repeat: round;
	}

	.job-specs {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		align-content: center;
		justify-content: center;
		align-items: center;
	}

	.spec {
		width: 50%;
	}

	.nav {
		display: -ms-flexbox;
		display: flex;
		-ms-flex-wrap: wrap;
		flex-wrap: wrap;
		padding-left: 0;
		margin-bottom: 0;
		list-style: none;
		justify-content: space-between;
	}

	.nav-link {
		display: block;
		padding: 5px;
	}

	.jobs-list {
		max-height: 700px;
		overflow: scroll;
	}

		.jobs-list::-webkit-scrollbar {
			width: 0.5em;
		}

		.jobs-list::-webkit-scrollbar-track {
			background-color: #f1f1f1;
		}

		.jobs-list::-webkit-scrollbar-thumb {
			background-color: #888;
		}

	.job-item:hover {
		box-shadow: 0px 2px 4px 0px #606060c2;
	}

	.tab-content {
		height: 200px;
		overflow: scroll;
	}

	.desc {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		align-content: space-between;
		justify-content: space-evenly;
		align-items: center;
	}

	/*for confirmation box */
	.overlay {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: rgba(0, 0, 0, 0.5);
		display: none;
		justify-content: center;
		align-items: center;
	}

	.confirmation-box {
		background-color: #fff;
		padding: 20px;
		border-radius: 5px;
		text-align: center;
	}

		.confirmation-box h2 {
			margin-bottom: 10px;
		}

		.confirmation-box .buttons {
			margin-top: 20px;
		}

			.confirmation-box .buttons button {
				margin: 0 10px;
			}

</style>
<script>
	var selectedJobId = 0;
	function showConfirmation() {

		$("#confirmationOverlay").fadeIn();
	}

	function hideConfirmation() {
		$("#confirmationOverlay").fadeOut();
	}

	function submitForm() {
		document.getElementById("myForm").submit();
	}
</script>


<div>
	<div class="row fullscreen-div" ">
		<div class="col-md-7 bg-light text-secondary small p-4 jobs-list">
			<div class="row">
				<div class="col-md-6 ">
					<span class="text-dark font-weight-bold">Showing @Model.Count() Jobs</span>

				</div>
				<div class="col-md-6">
