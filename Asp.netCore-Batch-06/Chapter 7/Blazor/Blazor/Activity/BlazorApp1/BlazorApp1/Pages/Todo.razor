@page "/todo"

<h3>Todo (@todos.Count(e=>!e.IsDone)
)
</h3>
<ul>
    @foreach(var todo in todos)
    {
        <li>
            <input type="checkbox" @bind="todo.IsDone" class="form-check-input" />
            <input @bind="todo.Title" placeholder="What do you want to do ....?"/>
         
        </li>

    }
</ul>
<input type="text" placeholder="Something todo" @bind="newTodo" @bind:event="oninput" class="form-control" />
<br />
<button @onclick=AddTodo class="btn btn-primary">Add todo</button>
@if (!String.IsNullOrEmpty(newTodo))
{
    <p>@newTodo </p>
}

@code {
    private List<TodoItem> todos = new();
    private string? newTodo;
    private void AddTodo()
    {
        // Todo: Add the todo
        if (!String.IsNullOrWhiteSpace(newTodo))
        {
            todos.Add(new TodoItem { Title = newTodo });
            newTodo = string.Empty;
        }
    }
}
